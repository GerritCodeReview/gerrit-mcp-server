{
  "name": "gerrit",
  "version": "1.0.0",
  "mcpServers": {
    "gerrit": {
      "description": "An MCP server for interacting with the Gerrit code review system.",
      "command": "${extensionPath}/.venv/bin/python",
      "args": [
        "${extensionPath}/gerrit_mcp_server/main.py",
        "stdio"
      ],
      "env": {
        "PYTHONPATH": "${extensionPath}"
      }
    }
  }
}